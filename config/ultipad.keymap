#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

#define TIMEOUT 300

&top_encoder { status = "okay"; };

/ {
    combos {
        compatible = "zmk,combos";

        combo_btclr {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 4>;
            bindings = <&bt BT_CLR>;
        };

        combo_reset {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 2>;
            bindings = <&sys_reset>;
        };

        combo_bootloader {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 1>;
            bindings = <&bootloader>;
        };

        combo_bt_nxt {
            timeout-ms = <TIMEOUT>;
            key-positions = <0 3>;
            bindings = <&bt BT_NXT>;
        };
    };

    keymap: keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";
            bindings = <
&to 0          &to 1         &to 2         &to 3
&kp BACKSPACE  &kp SLASH     &kp ASTERISK  &kp MINUS     &kp K_MUTE
&kp NUMBER_7   &kp N8        &kp N9
&kp NUMBER_4   &kp N5        &kp NUMBER_6  &kp PLUS
&kp NUMBER_1   &kp NUMBER_2  &kp NUMBER_3
               &kp N0        &kp PERIOD    &kp KP_ENTER  &kp C_PLAY_PAUSE  &kp C_NEXT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        fn_layer {
            display-name = "fn";
            bindings = <
&trans           &trans           &trans           &trans
&trans           &trans           &trans           &trans           &rgb_ug RGB_HUD
&rgb_ug RGB_SPI  &kp UP_ARROW     &trans
&kp LEFT_ARROW   &kp DOWN_ARROW   &kp RIGHT_ARROW  &rgb_ug RGB_EFF
&trans           &trans           &rgb_ug RGB_BRD
                 &rgb_ug RGB_SPD  &rgb_ug RGB_BRI  &trans           &kp DEL          &rgb_ug RGB_SAD
            >;

            sensor-bindings = <&inc_dec_kp PG_DN PG_UP &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        layer_2 {
            bindings = <
&trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans
&trans  &trans  &trans  &trans
&trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans
            >;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans
&trans  &trans  &trans  &trans
&trans  &trans  &trans
        &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
